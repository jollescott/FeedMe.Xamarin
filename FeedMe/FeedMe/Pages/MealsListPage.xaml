<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:cells="clr-namespace:FeedMe.Controls.Cells"
             xmlns:selectors="clr-namespace:FeedMe.Controls.Selectors"
             x:Class="FeedMe.MealsListPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="adTemplate">
                <cells:AdListCell/>
            </DataTemplate>

            <DataTemplate x:Key="recipeTemplate">
                <ViewCell>
                    <Frame x:Name="Frame_List" Margin="15, 7.5, 15, 7.5" Padding="0" CornerRadius="0">

                        <Grid Padding="0" HorizontalOptions="Fill" VerticalOptions="Fill" RowSpacing="0" ColumnSpacing="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="12*"/>
                            </Grid.ColumnDefinitions>

                            <ff:CachedImage Source="{Binding Image}" Margin="0" Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
                            <Label Text="{Binding Name}" FontSize="Medium"  Margin="0" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" Grid.Row="2" Grid.Column="2"/>
                            <ff:CachedImage Source="{Binding OwnerLogo}" Margin="0" Aspect="AspectFit" HorizontalOptions="Center" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>

                        </Grid>
                    </Frame>
                </ViewCell>
            </DataTemplate>

            <selectors:RecipeListTemplateSelector x:Key="recipeDataTemplateSelector"
                RecipeTemplate="{StaticResource recipeTemplate}"
                AdTemplate="{StaticResource adTemplate}" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <ScrollView>
            <ListView x:Name="ListView_Recipes" ItemsSource="{x:StaticResource recipeDataTemplateSelector}" ItemSelected="ListView_Recipes_ItemSelected">
            </ListView>
        </ScrollView>
    </StackLayout>
</ContentPage>