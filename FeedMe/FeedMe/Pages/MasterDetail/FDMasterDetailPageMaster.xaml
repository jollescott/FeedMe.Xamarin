        <Grid Grid.Row="0">
            <Image Source="ic_launcher.png" VerticalOptions="Center" HorizontalOptions="Center"/>
        </Grid>
        
        <ListView x:Name="MenuItemsListView" HasUnevenRows="true" ItemsSource="{Binding MenuItems}"
