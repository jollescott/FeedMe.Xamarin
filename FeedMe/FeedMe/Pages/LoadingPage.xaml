<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FeedMe"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="FeedMe.LoadingPage">
    <ContentPage.Content>
        <Grid>
            <ff:CachedImage x:Name="ff_Background" Margin="0" Aspect="AspectFill"/>
            <ActivityIndicator Margin="30" Color="#777777" x:Name="ActivityIndicatior_WaitingForServer" VerticalOptions="End" HorizontalOptions="Center" IsRunning="True"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>