<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeedMe.RecipePage">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout Spacing="0">
                <!--Image-->
                <Image Margin="0" x:Name="Image_Recipe" Aspect="AspectFill"  HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand"/>

                <!--Spacing-->
                <ContentView x:Name="ContentView_Spacing1" Margin="0" Padding="0"/>

                <!--Ingredients Head-->
                <Frame x:Name="Frame_IngredientsHead" Margin="0" CornerRadius="0">
                    <Label x:Name="Label_IngridientsHead" VerticalTextAlignment="Center" FontFamily=""/>
                </Frame>
                    
                <!--Ingredients-->
                <StackLayout x:Name="Stack_Ingridients"/>
                    
                <!--Instructions Head-->
                <Frame x:Name="Frame_InstructionsHead" Margin="0" CornerRadius="0">
                    <Label x:Name="Label_InstructionsHead" VerticalTextAlignment="Center"/>
                </Frame>

                <!--Instructions-->
                <StackLayout x:Name="Stack_Instructions"/>

                <!--Spacing-->
                <ContentView x:Name="ContentView_Spacing2" Margin="0" Padding="0"/>

            </StackLayout>
        </ScrollView>


    </ContentPage.Content>
</ContentPage>